                                <Button Name="DownloadCacheBoxFullCacheButton" Style="{DynamicResource WhiteButtonStyle}" Click="DownloadCacheBoxFullCacheButton_Click"/>
                                <Button Name="DownloadCacheBoxNumericFilesButton" Style="{DynamicResource WhiteButtonStyle}" Click="DownloadCacheBoxNumericFilesButton_Click"/>
                                <Button Name="DownloadCacheBoxCancelButton" Style="{DynamicResource WhiteButtonStyle}" Click="DownloadCacheBoxCloseButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Button Name="DownloadCacheBoxCloseButton" Style="{DynamicResource BoxCloseButtonStyle}" Click="DownloadCacheBoxCloseButton_Click"/>
                </Grid>
            </Grid>
            <Grid Name="RepairBox" Visibility="Collapsed">
                <Grid Background="#80000000"/>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="200">
                    <Border BorderBrush="Black" Background="#C8FFFFFF">
